{
  "openapi": "3.0.0",
  "info": {
    "version": "v1.0.0",
    "title": "Swagger para API Banco",
    "description": "Enpoints para uso externo. API Banco realizada por el Grupo 1, Integracion de aplicaciones | Segundo Cuatrimestre 2021 ",
    "license": {
      "name": "UADE",
      "url": "https://www.uade.edu.ar/"
    }
  },
  "servers": [
    {
      "url": "/api/users/",
      "description": "Servidor localhost o heroku"
    }
  ],
  "tags": [
    {
      "name": "Empresas - PagoServicios y DebitoAutomatico",
      "description": "Endpoints para manejo pago de servicios"
    },
    {
      "name": "Empresas - PagoSueldos",
      "description": "Endpoints para manejo pago de sueldos"
    },
 
    {
      "name": "Clearing Bancario",
      "description": "Endpoints para manejo del clearing "
    }
  ],
  "consumes": ["application/json"],
  "produces": ["application/json"],

  "paths": {
    "/altaempresaM": {
      "post": {
        "tags": ["Empresas - PagoServicios y DebitoAutomatico"],
        "summary": "Alta de cupones de pago",
        "requestBody": {
          "description": "Alta de cupones de pago, para pago de servicios, campo debito en '0' desactivado, en '1' activado",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Empresa"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "Cupon de pago generado correctamente",
            "schema": {
              "$ref": "#/definitions/id"
            }
          },
          "400": {
            "description": "Error al querer dar de alta el cupon"
          }
        }
      }
    },

    "/altasueldoM": {
      "post": {
        "tags": ["Empresas - PagoSueldos"],
        "summary": "Alta de sueldos",
        "requestBody": {
          "description": "Alta de sueldos",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Sueldo"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "Sueldo de pago generado correctamente",
            "schema": {
              "$ref": "#/definitions/id"
            }
          },
          "400": {
            "description": "Error al querer generar el sueldo"
          }
        }
      }
    },

     
    "/getEmpresaCUITEmpresa": {
      "post": {
        "tags": ["Empresas - PagoServicios y DebitoAutomatico"],
        "summary": "Obtengo los cupones de pago para una empresa especifica",

        "requestBody": {
          "description": "El campo 'cuitEmpresa' el indice de busqueda",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/cuitEmpresa"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "cuitEmpresa obtenido correctamente",
            "schema": {
              "$ref": "#/definitions/id"
            }
          },
          "400": {
            "description": "Error al querer obtener el cuitEmpresa"
          }
        }
      }
    },
    "/updateEmpresa": {
      "put": {
        "tags": ["Empresas - PagoServicios y DebitoAutomatico"],
        "summary": "Actualizacion de cuotas",
        "requestBody": {
          "description": "Actualizo estado de cuotas, el campo 'codigopago' es el indice",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Empresa"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Cupon de pago actualizado correctamente",
            "schema": {
              "$ref": "#/definitions/id"
            }
          },
          "400": {
            "description": "Error al querer actualizar la cuota"
          }
        }
      }
    }
  },

  "definitions": {
    "id": {
      "properties": {
        "id": {
          "type": "string"
        }
      }
    },
    "cuitEmpresa": {
      "properties": {
        "cuitEmpresa": {
          "type": "string"
        }
      }
    },
    "cuit": {
      "properties": {
        "cuit": {
          "type": "string"
        }
      }
    },
    "estado": {
      "properties": {
        "estado": {
          "type": "string"
        }
      }
    },
    "Login": {
      "type": "object",
      "properties": {
        "usuario": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Sueldo": {
      "type": "object",
      "properties": {
        "cbu": {
          "type": "string"
        },
        "importe": {
          "type": "integer"
        },
        "fechaPago": {
          "type": "string"
        },
        "pagado": {
          "type": "string"
        },
        "cbuEmpresa": {
          "type": "string"
        },        
        "descripcion": {
          "type": "string"
        }
      }
    },
    "Empresa": {
      "type": "object",
      "properties": {
        "nombre": {
          "type": "string"
        },
        "codigopago": {
          "type": "string"
        },
        "cuitEmpresa": {
          "type": "string"
        },
        "importe": {
          "type": "integer"
        },
        "descripcion": {
          "type": "string"
        },
        "fechaVencimiento": {
          "type": "string"
        },
        "estado": {
          "type": "string"
        },
        "debito": {
          "type": "string"
        }
      }
    }
  }
}
