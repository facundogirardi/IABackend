{
  "openapi": "3.0.0",
  "info": {
    "version": "v1.0.0",
    "title": "Swagger para API Banco",
    "description": "Enpoints para uso externo. API Banco realizada por el Grupo 1, Integracion de aplicaciones | Segundo Cuatrimestre 2021 ",
    "license": {
      "name": "UADE",
      "url": "https://www.uade.edu.ar/"
    }
  },
  "servers": [
    {
      "url": "/api/users/",
      "description": "Servidor localhost o heroku"
    }
  ],
  "tags": [
    {
      "name": "Empresas",
      "description": "Endpoints para manejo de empresas"
    },
    {
      "name": "Movimientos",
      "description": "Endpoints para manejo de alta de movimientos"
    },
    {
      "name": "Usuarios",
      "description": "Endpoints para manejo de usuarios "
    }
  ],
  "consumes": ["application/json"],
  "produces": ["application/json"],

  "paths": {
    "/getUsuarioCuit": {
      "post": {
        "tags": ["Usuarios"],
        "summary": "Obtengo usuario especifico por CUIT de usuario",

        "requestBody": {
          "description": "El campo CUIT el indice de busqueda",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/cuit"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Usuario obtenido correctamente",
            "schema": {
              "$ref": "#/definitions/id"
            }
          },
          "400": {
            "description": "Error al querer obtener el usuario"
          }
        }
      }
    },
    "/updateUserCUIT": {
      "put": {
        "tags": ["Usuarios"],
        "summary": "Depositos a cuenta",
        "requestBody": {
          "description": "Deposito de sueldos en Caja de ahorro, 'cuit' es campo de busqueda y 'balanceca', la cuenta de deposito",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Usuarioaupdate"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Deposito realizado correctamente",
            "schema": {
              "$ref": "#/definitions/id"
            }
          },
          "400": {
            "description": "Error al querer realizar el deposito"
          }
        }
      }
    },
    "/altaempresa": {
      "post": {
        "tags": ["Empresas"],
        "summary": "Alta de cuotas",
        "requestBody": {
          "description": "Alta de cuotas, para pago de servicios",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Empresaupdate"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "Alta efectuada correctamente",
            "schema": {
              "$ref": "#/definitions/id"
            }
          },
          "400": {
            "description": "Error al querer dar de alta la cuota"
          }
        }
      }
    },
    "/createMovimiento": {
      "post": {
        "tags": ["Movimientos"],
        "summary": "Generacion de movimientos",
        "requestBody": {
          "description": "Generacion de movimientos, para visualizacion del usuario en HB",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/altamovimiento"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "Movimiento efectuado correctamente",
            "schema": {
              "$ref": "#/definitions/id"
            }
          },
          "400": {
            "description": "Error al querer dar de alta el movimiento"
          }
        }
      }
    },
    "/getEmpresaESTADO": {
      "post": {
        "tags": ["Empresas"],
        "summary": "Obtengo estado de pago especifico por estado de pago",
        "requestBody": {
          "description": "El campo Estado el indice de busqueda, 'Pago parcial' 'Pago total' ",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/estado"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Cupon obtenido correctamente",
            "schema": {
              "$ref": "#/definitions/id"
            }
          },
          "400": {
            "description": "Error al querer obtener el cupon"
          }
        }
      }
    },
    "/getEmpresaCUIT": {
      "post": {
        "tags": ["Empresas"],
        "summary": "Obtengo cupon de pago especifico por CUIT de usuario",

        "requestBody": {
          "description": "El campo CUIT el indice de busqueda",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/cuit"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Cupon obtenido correctamente",
            "schema": {
              "$ref": "#/definitions/id"
            }
          },
          "400": {
            "description": "Error al querer obtener el cupon"
          }
        }
      }
    },
    "/updateEmpresa": {
      "put": {
        "tags": ["Empresas"],
        "summary": "Actualizacion de cuotas",
        "requestBody": {
          "description": "Actualizo estado de cuotas",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Empresaupdate"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Cuota actualizada correctamente",
            "schema": {
              "$ref": "#/definitions/id"
            }
          },
          "400": {
            "description": "Error al querer actualizar la cuota"
          }
        }
      }
    }
  },

